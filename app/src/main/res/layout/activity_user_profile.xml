<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textview5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/orbitron_bold"
        android:text="Your Profile"
        android:textColor="#FCF5FD"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/orbitron_bold"
        android:text="Name"
        android:textColor="#FCF5FD"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@+id/textview5"
        android:layout_marginTop="72dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTextText"
        android:layout_width="255dp"
        android:layout_height="41dp"
        android:ems="10"
        android:inputType="text"
        android:textColorHint="#FDFBFD"
        app:layout_constraintTop_toTopOf="@+id/textview"
        android:layout_marginStart="110dp"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/orbitron_bold"
        android:text="Age"
        android:textColor="#FCF5FD"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@+id/textview"
        android:layout_marginTop="50dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTextText2"
        android:layout_width="255dp"
        android:layout_height="41dp"
        android:ems="10"
        android:inputType="text"
        android:textColorHint="#FDFBFD"
        app:layout_constraintTop_toTopOf="@+id/textview2"
        android:layout_marginStart="110dp"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textview4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/orbitron_bold"
        android:text="Phone"
        android:textColor="#FCF5FD"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@+id/textview2"
        android:layout_marginTop="50dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTextText5"
        android:layout_width="255dp"
        android:layout_height="41dp"
        android:ems="10"
        android:inputType="text"
        android:textColorHint="#FDFBFD"
        app:layout_constraintTop_toTopOf="@+id/textview4"
        android:layout_marginStart="124dp"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textview3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/orbitron_bold"
        android:text="Payment Type"
        android:textColor="#FCF5FD"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@+id/textview4"
        android:layout_marginTop="57dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/paymentspinner"
        android:layout_width="120dp"
        android:layout_height="20dp"
        android:entries="@array/payment_types"
        app:layout_constraintTop_toTopOf="@+id/textview3"
        android:layout_marginStart="270dp"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textview6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/orbitron_bold"
        android:text="Favorite Game"
        android:textColor="#FCF5FD"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@+id/textview3"
        android:layout_marginTop="50dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="120dp"
        android:layout_height="20dp"
        android:entries="@array/favorite_games"
        app:layout_constraintTop_toTopOf="@+id/textview6"
        android:layout_marginStart="270dp"
        app:layout_constraintStart_toStartOf="parent" />



    <ImageView
        android:id="@+id/imageView"
        android:layout_width="190dp"
        android:layout_height="201dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview6"
        app:srcCompat="@drawable/gamer" />

    <Button
        android:id="@+id/submitButton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:backgroundTint="#225B6D"
        android:text="Submit"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        android:layout_marginTop="25dp"
        android:layout_marginStart="111dp"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
